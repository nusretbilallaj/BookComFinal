@using BookCommerceCustom1.Helpers
@model BookCommerceCustom1.ViewModels.PorosiaViewModel
<form method="post">
<input asp-for="Porosia.Id" hidden=""/>
<br/>
<div class="container">
<div class="card">
<div class="card-header bg-dark text-light ml-0 row container">
	<div class="col-12 d-none d-md-block col-md-6 pb-1">
		<i class="fas fa-shopping-cart"></i> &nbsp; Order Summary
	</div>
	<div class="col-12 col-md-4 offset-md-2 text-right">
		<a asp-action="Listo" class="btn btn-outline-info form-control btn-sm">Kthehu te porosite</a>
	</div>
</div>
<div class="card-body">
<div class="container rounded p-2">
<div class="row">
<div class="col-12 col-lg-6 pb-4">
	<div class="row">
		<h4 class="d-flex justify-content-between align-items-center mb-3">
			<span class="text-primary">Detajet e marrjes se porosise:</span>
		</h4>
	</div>
	<div class="row my-1">
		<div class="col-3">Emri</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.Emri" class="form-control"/>
				<span asp-validation-for="Porosia.Emri" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Emri" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Telefoni</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.NumriITelefonit" class="form-control"/>
				<span asp-validation-for="Porosia.NumriITelefonit" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Emri" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Rruga</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.Rruga" class="form-control"/>
				<span asp-validation-for="Porosia.Rruga" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Rruga" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Qyteti</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.Qyteti" class="form-control"/>
				<span asp-validation-for="Porosia.Qyteti" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Qyteti" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Shteti</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.Shteti" class="form-control"/>
				<span asp-validation-for="Porosia.Shteti" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Shteti" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Kodi postal</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" asp-for="Porosia.KodiPostal" class="form-control"/>
				<span asp-validation-for="Porosia.KodiPostal" class="text-danger"></span>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.KodiPostal" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">emaili</div>
		<div class="col-9">
			<input type="text" readonly asp-for="Porosia.Perdorusi.Email" class="form-control"/>
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Order Date</div>
		<div class="col-9">
			<input type="text" value="@Model.Porosia.DataEPorosise.ToShortDateString()" class="form-control" readonly/>
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Carrier</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" id="posta" asp-for="Porosia.Posta" class="form-control"/>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.Posta" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Numri gjurmues</div>
		<div class="col-9">
			@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
			{
				<input type="text" id="numriGjurmues" asp-for="Porosia.NumriGjurmues" class="form-control"/>
			}
			else
			{
				<input type="text" readonly asp-for="Porosia.NumriGjurmues" class="form-control"/>
			}
		</div>
	</div>
	<div class="row my-1">
		<div class="col-3">Shipping Date</div>
		<div class="col-9">
			<input type="text" value="@Model.Porosia.DataEDergeses.ToShortDateString()" class="form-control" readonly/>
		</div>
	</div>
	@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
	{
		<div class="row my-1">
			<div class="col-3">Session ID</div>
			<div class="col-9">
				<input type="text" asp-for="Porosia.SessionId" readonly class="form-control"/>
			</div>
		</div>
		<div class="row my-1">
			<div class="col-3">Payment Intent Id</div>
			<div class="col-9">
				<input type="text" asp-for="Porosia.PaymentIntentId" readonly class="form-control"/>
			</div>
		</div>
	}
	<div class="row my-1">
		@if (Model.Porosia.SessionId == null)
		{
			<div class="col-3">Payment Due Date</div>
			<div class="col-9">
				<input readonly value="@Model.Porosia.DataPerPagese.ToShortDateString()" class="form-control"/>
			</div>
		}
		else
		{
			<div class="col-3">Payment Date</div>
			<div class="col-9">
				<input readonly value="@Model.Porosia.DataEPageses.ToShortDateString()" class="form-control"/>
			</div>
		}

	</div>
	<div class="row my-1">
		<div class="col-3">Payment Status</div>
		<div class="col-9">
			<input type="text" asp-for="Porosia.StatusiIPorosise" readonly class="form-control"/>
		</div>
	</div>
	<input type="submit" asp-action="AzhuroDetajetEPorosiese" class="btn btn-warning form-control my-1" value="Azhuro detajet" />


</div>
<div class="col-12 col-lg-5 offset-lg-1">
	<h4 class="d-flex justify-content-between align-items-center mb-3">
		<span class="text-primary">Order Summary</span>
	</h4>
	<label class="btn btn-outline-primary form-control my-2">Statusi i Porosise - @Model.Porosia.StatusiIPorosise</label>

	<ul class="list-group mb-3">

		@foreach (var det in Model.PorosiDetalet)
		{
			<li class="list-group-item d-flex justify-content-between p-2">
				<div class="row container">
					<div class="col-8">

						<h6 class="my-0 text-primary">@det.Produkti.Emri</h6>
						<small class="text-muted">Price : @det.Cmimi.ToString("c")</small><br/>
						<small class="text-muted">Quantity : @det.Sasia</small>
					</div>
					<div class="col-4 text-end">
						<p class="text-success">@((det.Sasia * det.Cmimi).ToString("c"))</p>
					</div>
				</div>
			</li>
		}



		<li class="list-group-item bg-info">
			<div class="row container">
				<div class="col-6">
					<h5 class="text-white">Totali </h5>
				</div>
				<div class="col-6 text-end">
					<h5 class="text-white">@Model.Porosia.Totali.ToString("c")</h5>
				</div>
			</div>
		</li>
	</ul>

	@if (User.IsInRole(Sd.RoliAdmin) || User.IsInRole(Sd.RoliPunetor))
	{
		if (Model.Porosia.StatusiIPorosise == Sd.StatusIAprovuar)
		{
			<input type="submit" asp-action="FilloProcesimin" class="btn btn-primary form-control my-1" value="Starto Prcesimin" />
		}
		if (Model.Porosia.StatusiIPorosise == Sd.StatusNeProces)
		{
		<input type="submit" asp-action="DergoPorosine" onclick="return ValidateInput()" class="btn btn-primary form-control my-1" value="Dergo porosine" />
		}

		@if (Model.Porosia.StatusiIPorosise != Sd.StatusIKthyer && Model.Porosia.StatusiIPorosise != Sd.StatusIAnuluar && Model.Porosia.StatusiIPorosise!=Sd.StatusIDerguar)
		{
			<input type="submit" asp-action="AnuloPorosine" class="btn btn-danger form-control my-1" value="Anulo porosine" />
		}

	}
	@if (Model.Porosia.StatusiIPageses == Sd.StatusIPagesesForPageseTeVonuar && Model.Porosia.StatusiIPorosise == Sd.StatusIDerguar)
	{
		<input type="submit" class="btn btn-success form-control my-1" value="Paguaj tani"/>
	}


</div>
</div>
</div>
</div>
</div>
</div>
</form>
@section Scripts
{
	<partial name="_ValidationScriptsPartial"/>
	<script>
		function ValidateInput(){
			if (document.getElementById("numriGjurmues").value == "") {
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: 'Specifiko numrin gjurmues!',
				});
				return false;
			}
			if (document.getElementById("posta").value == "") {
				Swal.fire({
					icon: 'error',
					title: 'Oops...',
					text: 'Specifiko posten!',
				});
				return false;
			}
			return true;
		}
	</script>
}
